<div class="row">
  <div class="col-lg-12">
    <h1 class="cover-heading">Registeration Form</h1>
  </div>
</div>

<hr \>

<div class="row">
  <div class="col-lg-12">
    <div class="inner cover">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: 'user@domain.com' %>
          <%= f.input :password, required: true,
            placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :date_of_birth, as: :date, required: true, include_blank: true,
            start_year: Date.today.year - 90, end_year: Date.today.year - 10 %>
        </div>

        <hr \>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-lg btn-default" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

    </div>
  </div>
</div>